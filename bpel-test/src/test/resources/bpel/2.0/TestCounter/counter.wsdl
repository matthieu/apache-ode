    <wsdl:operation name="initialize">
      <soap:operation soapAction="" style="rpc"/>
      <wsdl:input>
        <soap:body namespace="http://example.com/bpel/counter" use="literal"/>
      </wsdl:input>
      <wsdl:output>
        <soap:body namespace="http://example.com/bpel/counter" use="literal"/>
      </wsdl:output>
    </wsdl:operation>
    <wsdl:operation name="get">
